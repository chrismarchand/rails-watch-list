<h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.comment %></p>
  <%= link_to 'remove', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure bitch?" } %>
<% end %>



<%= link_to "back to all lists", lists_path %>
<%= link_to "Create a new bookmark",  new_list_bookmark_path(@list), class: "btn btn-primary" %>
